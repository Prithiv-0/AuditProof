# VeriSchol Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Render will provide these automatically)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=verischol
DB_USER=verischol_user
DB_PASSWORD=your-db-password

# JWT Configuration (Use a strong, unique secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# System Salt for Hashing
SYSTEM_SALT=verischol-integrity-salt-2024

# OTP Configuration
OTP_EXPIRY_MINUTES=5

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-url.vercel.app

# Email Configuration (Resend - https://resend.com)
# Get your API key from: https://resend.com/api-keys
# Leave empty to run in demo mode (OTP shown on screen)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email sender address (must be from verified domain in Resend)
# Use 'onboarding@resend.dev' for testing with any email
EMAIL_FROM=VeriSchol <onboarding@resend.dev>
